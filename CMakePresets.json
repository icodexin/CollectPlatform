{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "$env{QT6_DIR}",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "QT_QML_GENERATE_QMLLS_INI": "ON",
        "BINARY_OUT_DIRECTORY": "${sourceDir}/../output/"
      }
    },
    {
      "name": "base-windows",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug-windows-x64",
      "inherits": "base-windows",
      "displayName": "Windows x64 (Debug)",
      "description": "Debug build for Windows x64 using MSVC & Ninja",
      "binaryDir": "${sourceDir}/../build/debug-windows-x64",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-windows-x64",
      "inherits": "debug-windows-x64",
      "displayName": "Windows x64 (Release)",
      "description": "Release build for Windows x64 using MSVC & Ninja",
      "binaryDir": "${sourceDir}/../build/release-windows-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "base-macos",
      "inherits": "base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    },
    {
      "name": "debug-macos-arm64",
      "inherits": "base-macos",
      "displayName": "macOS arm64 (Debug)",
      "description": "Debug build for macOS arm64 using Clang & Ninja",
      "binaryDir": "${sourceDir}/../build/debug-macos-arm64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-macos-arm64",
      "inherits": "base-macos",
      "displayName": "macOS arm64 (Release)",
      "description": "Release build for macOS arm64 using Clang & Ninja",
      "binaryDir": "${sourceDir}/../build/release-macos-arm64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug",
      "inherits": [
        "debug-windows-x64",
        "debug-macos-arm64"
      ],
      "displayName": "Debug",
      "description": "Debug build for the current platform, auto-selected"
    },
    {
      "name": "release",
      "inherits": [
        "release-windows-x64",
        "release-macos-arm64"
      ],
      "displayName": "Release",
      "description": "Release build for the current platform, auto-selected"
    }
  ]
}